<Window x:Class="TwinCATModuleTransfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TwinCATModuleTransfer.Views"
        Title="TwinCAT Module Transfer"
        Width="1120" Height="720"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="12">
            <TextBlock Text="TwinCAT Module Transfer" FontSize="20" FontWeight="Bold" />
        </DockPanel>

        <TabControl Grid.Row="1" Margin="12">
            <TabItem Header="Export">
                <!-- WICHTIG: hier muss ExportView (UserControl) stehen -->
                <views:ExportView />
            </TabItem>
            <TabItem Header="Import">
                <views:ImportView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>