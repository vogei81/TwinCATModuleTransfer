<UserControl x:Class="TwinCATModuleTransfer.Views.ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TwinCATModuleTransfer.ViewModels">
    <UserControl.DataContext>
        <vm:ImportViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Kopf -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="*"/>
            <!-- Log/Baum -->
            <RowDefinition Height="Auto"/>
            <!-- Aktionen -->
        </Grid.RowDefinitions>

        <!-- Kopf -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Ziel‑Solution:" Width="130" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SolutionPath}" MinWidth="500"/>
                    <Button Content="…" Margin="8,0,0,0" Command="{Binding BrowseSolutionCommand}"/>
                    <TextBlock Text="  Host:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <ComboBox SelectedItem="{Binding DteHost}" ItemsSource="{Binding DteHosts}" MinWidth="200"/>
                    <Button Content="Laden" Margin="8,0,0,0" Command="{Binding LoadTreeCommand}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Modul‑XML/Exports:" Width="130" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ModuleFolder}" MinWidth="500"/>
                    <Button Content="…" Margin="8,0,0,0" Command="{Binding BrowseModuleFolderCommand}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Stations‑FB‑Instanz (Teststand):" Width="230" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding OldPlcBasePath}" MinWidth="480"
                   ToolTip="z. B. TIPC^PLCproj^Instanz^FB_Station"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Stations‑FB‑Instanz (Maschine):" Width="230" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding NewPlcBasePath}" MinWidth="480"
                   ToolTip="Neuer Basispfad für Mappings im Maschinenprojekt"/>
                </StackPanel>
            </StackPanel>

            <GroupBox Header="Ziel‑Parent (Anschlusspunkt im Maschinenprojekt)" Grid.Column="1">
                <Border Padding="8" MinWidth="360" MinHeight="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TreeView ItemsSource="{Binding Tree}" SelectedItemChanged="TreeView_SelectedItemChanged">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type vm:SelectionTreeItem}" ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </ScrollViewer>
                </Border>
            </GroupBox>
        </Grid>

        <!-- Statuszeile -->
        <Border Grid.Row="1" Padding="2" BorderThickness="0,1,0,0" BorderBrush="#DDD">
            <TextBlock Text="{Binding Status}" Foreground="#444" TextWrapping="Wrap"/>
        </Border>

        <!-- Log -->
        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" Padding="8">
            <TextBox Text="{Binding Log}"
               AcceptsReturn="True"
               IsReadOnly="True"
               VerticalScrollBarVisibility="Auto"
               TextWrapping="Wrap"/>
        </Border>

        <!-- Aktionen -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Importieren &amp; Links umschreiben" Padding="16,6" Command="{Binding ImportCommand}"/>
        </StackPanel>

        <!-- Busy-Overlay -->
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
          Background="#60FFFFFF" Cursor="Wait" IsHitTestVisible="True"
          Panel.ZIndex="9999">
            <Border CornerRadius="6" Background="#CCFFFFFF" Padding="16"
              HorizontalAlignment="Center" VerticalAlignment="Center" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding BusyText}" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ProgressBar Width="260" Height="12" IsIndeterminate="True"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>